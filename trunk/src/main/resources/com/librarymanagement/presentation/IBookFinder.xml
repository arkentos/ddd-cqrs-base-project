<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.librarymanagement.presentation.IBookFinder">


  <select id="findAllBooks" resultType="com.librarymanagement.presentation.dto.BookDetailsDto">
    SELECT id,
          name,
          AMOUNT,
          CURRENCY_CODE
    FROM book
    where ENTITY_STATUS = 0
    order by id desc;
  </select>



</mapper>